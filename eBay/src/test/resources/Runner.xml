<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="eBay Automation" parallel="false">
    <parameter name="useCloudEnv" value="false"></parameter>
    <parameter name="cloudEnvName" value="browserstack"></parameter>
    <parameter name="os" value="mac"></parameter>
    <parameter name="os_version" value="Sierra"></parameter>
    <parameter name="browserName" value="chrome"></parameter>
    <parameter name="browserVersion" value="98"></parameter>
    <parameter name="url" value="https://www.ebay.com/"></parameter>

    <test name="eBay test">
        <classes>
            <class name="us.piit.TestBrandOutletFeatures"></class>
            <class name="us.piit.TestBusinessAndIndustrialOptions"></class>
            <class name="us.piit.TestCareersPathways"></class>
            <class name="us.piit.TestClassicsCarModels"></class>
            <class name="us.piit.TestClothingAndAccessories"></class>
            <class name="us.piit.TestDSotoResultsPage"></class>
            <class name="us.piit.TestHeaderPages"></class>
            <class name="us.piit.TestMotorsDropdownOptions"></class>
            <class name="us.piit.TestSearchManyItems"></class>
            <class name="us.piit.TestSearchSingleItem"></class>
        </classes>
    </test>
</suite>